func attack(loc:Vector2i): 
	var dir = tilemap.biggest_dimension(tilemap.local_to_map(position)-loc)
	do_damage(loc, tilemap.local_to_map(position))
	var delta1 = Vector2i(1,0)
	var delta2 = Vector2i(1,1)
	for i in range(4):
		delta1 = Vector2i((-1)*delta1.y, delta1.x)
		delta2 = Vector2i((-1)*delta2.y, delta2.x)
		if tilemap.is_in_map(tilemap.local_to_map(position)+delta1)&&delta1!=dir: do_damage(tilemap.local_to_map(position)+delta1,tilemap.local_to_map(position)+dir*10)
		if tilemap.is_in_map(tilemap.local_to_map(position)+delta2)&&(delta2-dir).lenght_squared()>1: do_damage(tilemap.local_to_map(position)+delta2,tilemap.local_to_map(position)+dir*10)

func die():
	tilemap.summon(tilemap.local_to_map(position),8)
	queue_free()
